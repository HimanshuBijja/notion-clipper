{
  "manifest_version": 3,
  "name": "Notion Clipper",
  "version": "1.0.0",
  "description": "Save selected text to Notion with custom paths",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
